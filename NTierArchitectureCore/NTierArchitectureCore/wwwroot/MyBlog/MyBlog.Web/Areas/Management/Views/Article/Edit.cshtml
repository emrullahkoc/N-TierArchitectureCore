@model Article

<div class="card">
	<div class="card-body">
		<form method="post">
			<input asp-for="Id" type="hidden" />
			<input class="form-control mb-3" type="text"
				   placeholder="Başlık" asp-for="Title">
			<span class="text-danger" asp-validation-for="Title"></span>

			<input class="form-control mb-3" type="text"
				   placeholder="Subject" asp-for="Subject">
			<span class="text-danger"></span>

			<input class="form-control mb-3" type="text"
				   placeholder="Author" asp-for="Author">
			<span class="text-danger"></span>


			<textarea class="form-control mb-3 ckeditor" type="text"
					  placeholder="Açıklama" asp-for="Description" rows="4">
				   </textarea>

			<input type="submit" value="Kaydet" class="btn btn-primary" />

		</form>
	</div>
</div>