@model IEnumerable<ArticleTag>

<a href="/Management/ArticleTag/Create">Yeni Ekle</a>
<div class="card radius-15">
    <div class="card-body">
        <div class="card-title">
            <h4 class="mb-0">Etiket Makale</h4>
        </div>
        <hr>
        <div class="table-responsive">
            <table class="table mb-0">
                <thead>
                    <tr>
                        <th scope="col">Makale Adı</th>
                        <th scope="col">Etiket Adı</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Article.Title</td>
                            <td>@item.Tag.Name</td>

                            <td><a class="btn btn-warning" href="/Management/ArticleTag/Delete/@item.ArticleId/@item.TagId">Düzenle</a></td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>